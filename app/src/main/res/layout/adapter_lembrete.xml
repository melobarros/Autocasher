<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:id="@+id/lembreteCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCC4F0"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iconeTransacao_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/ic_access_alarm_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/lembrete_tipoRegistro_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:text="Tipo Registro"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lembrete_descricao_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descricao" />

                <TextView
                    android:id="@+id/lembrete_data_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="Data"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/lembrete_repeatEvery_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Repetir a cada" />

            <LinearLayout
                android:id="@+id/lembrete_sub_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lembrete_valorPrevisto_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor previsto" />

                    <TextView
                        android:id="@+id/lembrete_local_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local" />

                    <TextView
                        android:id="@+id/lembrete_observacao_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observacao" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/lembrete_edit_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                    <ImageButton
                        android:id="@+id/lembrete_delete_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0"
                        android:paddingRight="10dp"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>